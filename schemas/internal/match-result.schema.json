{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "match-result.schema.json",
  "title": "Match Result",
  "description": "Change Matcher의 출력 - 명세와 변경의 매칭 결과",
  "type": "object",
  "properties": {
    "file_name": {
      "type": "string",
      "description": "분석된 파일명"
    },
    "matches": {
      "type": "array",
      "description": "매칭된 항목 목록",
      "items": {
        "$ref": "#/$defs/Match"
      }
    },
    "unmatched_specs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "이 파일에서 찾지 못한 명세 ID 목록"
    },
    "unexpected_changes": {
      "type": "array",
      "description": "명세에 없는 변경 목록",
      "items": {
        "$ref": "#/$defs/UnexpectedChange"
      }
    },
    "analysis_notes": {
      "type": "string",
      "description": "분석 메모"
    }
  },
  "required": ["file_name", "matches"],
  "$defs": {
    "Match": {
      "type": "object",
      "properties": {
        "spec_id": {
          "type": "string",
          "description": "매칭된 변경 명세 ID"
        },
        "line_start": {
          "type": "integer",
          "minimum": 1,
          "description": "변경 시작 라인"
        },
        "line_end": {
          "type": "integer",
          "minimum": 1,
          "description": "변경 끝 라인"
        },
        "match_type": {
          "type": "string",
          "enum": ["exact", "partial", "inferred"],
          "description": "매칭 유형"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "매칭 신뢰도 (0.0 ~ 1.0)"
        },
        "evidence": {
          "type": "string",
          "description": "매칭 근거 설명"
        }
      },
      "required": ["spec_id", "line_start", "line_end", "match_type", "confidence"]
    },
    "UnexpectedChange": {
      "type": "object",
      "properties": {
        "line_start": {
          "type": "integer",
          "minimum": 1
        },
        "line_end": {
          "type": "integer",
          "minimum": 1
        },
        "description": {
          "type": "string",
          "description": "변경 내용 설명"
        },
        "potential_intent": {
          "type": "string",
          "description": "추론된 의도"
        }
      },
      "required": ["line_start", "line_end", "description"]
    }
  }
}
